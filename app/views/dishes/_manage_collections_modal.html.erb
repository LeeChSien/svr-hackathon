<script type="text/ng-template" id="manageCollectionsModalContent.html">
  <div class="modal-header">
    <button type="button" class="close" ng-click="close()" ng-if="!busy"><span aria-hidden="true">&times;</span></button>
    <h3 class="modal-title">加入收藏</h3>
  </div>

  <div class="modal-body">
    <div class="list-group">
      <a href="#" class="list-group-item" ng-repeat="collection in collections"
        ng-class="isCollectionIncludeDish(collection, selected_dish) ? 'active' : ''" ng-click="toggle($index, selected_dish)">
        {{ collection.name }}
        <i class="fa fa-check" ng-if="isCollectionIncludeDish(collection, selected_dish)"></i>
      </a>
    </div>

    <div class="input-group">
      <input type="text" class="form-control" placeholder="列表名稱..." ng-model="model.collection">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button" ng-click="submitCollection()">新增收藏列表</button>
      </span>
    </div>
  </div>
</script>
