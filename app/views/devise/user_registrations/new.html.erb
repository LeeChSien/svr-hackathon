<div class="container">
  <div style="margin-top:50px;" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default panel-signup" >
      <div class="panel-heading">
        <div class="panel-title">成為會員</div>
      </div>

      <div class="panel-body" >
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-vertical', role: 'form', novalidate: 'true',
          :'ng-controller' => 'signUpFormCtrl' }) do |f| %>
<% if f.error_notification %>
          <div class="alert alert-danger col-sm-12">
            <p><b>Please review the problems below:</b><p>
            <% resource.errors.each do |key, value| %>
              <%= "#{key.to_s.gsub('_', " ")}: #{value}" %><br>
            <% end %>
          </div>
<% end %>

          <div class="form-group">
            <%= f.input_field :name, class: "form-control", placeholder: "姓名",
              :'ng-model' => "model.name", :'validator' => "[required]" %>
          </div>

          <div class="form-group">
            <%= f.input_field :email, class: "form-control", placeholder: "電子信箱",
              :'ng-model' => "model.email", :'validator' => "[email]" %>
          </div>

          <div class="form-group">
            <%= f.input_field :password, class: "form-control", placeholder: "密碼",
              :'ng-model' => "model.password", :'validator' => "[required]" %>
          </div>

          <div class="form-group">
            <%= f.input_field :password_confirmation, class: "form-control", placeholder: "確認密碼",
              :'ng-model' => "model.password_confirmation", :'validator' => "[required]" %>
          </div>

          <button type="button" class="btn btn-success" ng-click="submit()">註冊</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
