// LANDING PAGE

.landing img {
  width: 100%;
}

.block {
  min-height: 90%;

  .large-h1 {
    font-size: 4em;
  }
  h1, h2, h3, h4, h5, .cta-button {
    text-align: center;
  }
  .cta-button {
    margin-top: 90px;
  }

  h1 {
    font-weight: bold;
  }
}

.landing-block {
  margin-top: -20px;
  background: url("/landing_bg.gif") center center no-repeat;
  background-size: cover;
  padding-top: 10%;
  color: #fff;

  .btn-lg {
    font-size: 23px;
  }
}

